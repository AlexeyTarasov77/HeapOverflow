model User {
  id           Int          @id @default(autoincrement())
  username     String
  email        String
  firstname    String
  lastname     String
  isActive     Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  passwordHash String
  imageUrl     String
  questions        Question[]
  pinnedQuestions  PinnedQuestion[]
  answers       Answer[]
  comments     Comment[]
}
